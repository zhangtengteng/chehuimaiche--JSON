<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_gray"
    android:orientation="vertical" >
    <include layout="@layout/top_title" />"
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/people"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView 
                android:id="@+id/vertify_phone_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                 />
        </LinearLayout>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/main_background_gray"/>
        <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:background="@color/white"
         >
          
         <EditText
              android:id="@+id/et_code"
             android:layout_width="0dp"
             android:layout_weight="5"
             android:layout_height="match_parent"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="60dp"
             android:background="@drawable/corners_bg"
             android:hint="请输入验证码"
             android:paddingLeft="10dp"
             android:inputType="number"
             />
         <Button
            android:id="@+id/btn_send_code"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corners_bg_reg0_bule"
            android:text="@string/reg_user_send_code" />
     </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_myorder_next"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corners_login_btn_bg"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>
