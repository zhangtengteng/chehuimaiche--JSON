<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <include layout="@layout/top_title" />

    <LinearLayout
        android:id="@+id/reg_complete"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/finish" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:text="@string/reg2_finish1"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>

    <Button
        android:id="@+id/reg_btn_startAuthentication"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/reg_complete"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corners_login_btn_bg"
        android:text="@string/reg_authentication"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reg_btn_startapp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/reg_btn_startAuthentication"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="@string/reg2_finish2"
        android:textColor="@color/blue"
        android:textSize="16sp" />

</RelativeLayout>