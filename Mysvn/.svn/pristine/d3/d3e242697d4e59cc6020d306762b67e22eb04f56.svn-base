<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background_gray" >

    <include
        android:id="@+id/top_title"
        layout="@layout/top_title" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="30dp" 
        android:orientation="vertical">
        
   
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:textColor="#6000"
        android:text="@string/feddback_hint" />

    <EditText
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:maxLines="10"
        android:minLines="8"
        android:paddingLeft="5dp"
        android:scrollbars="vertical"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="15sp" />
 </LinearLayout>
    <Button
        android:id="@+id/feedback_btn_commit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/orange"
        android:text="@string/feddback_commit"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
   <TextView 
        android:id="@+id/feedback_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="16sp"
        android:text="@string/feedback_session"/>
   <TextView 
        android:id="@+id/feedback_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:clickable="true"
        android:textSize="16sp"
        android:text="@string/feedback_phone"/>
</LinearLayout>
</LinearLayout>